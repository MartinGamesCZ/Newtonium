{
  "name": "newtonium",
  "type": "module",
  "module": "src/lib/index.ts",
  "main": "src/lib/index.ts",
  "version": "0.3.9",
  "author": {
    "name": "Martin Petr",
    "email": "martinpetrnp@gmail.com"
  },
  "license": "LGPL-2.1-or-later",
  "types": "dist_lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/lib/index.ts",
      "require": "./dist_lib/index.js",
      "types": "./dist_lib/index.d.ts"
    },
    "./client": {
      "import": "./dist_lib/client/index.js",
      "require": "./dist_lib/client/index.js",
      "types": "./dist_lib/client/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MartinGamesCZ/Newtonium.git"
  },
  "scripts": {
    "newtonium": "bun src/index.ts",
    "prepack": "rm -rf include && mkdir include && cp ../default include/default -r && bun build --minify ./src/lib/**/* --outdir dist_lib --target bun && tsc --emitDeclarationOnly --noEmitOnError false --allowJs --skipLibCheck | grep -v 'TS' || true",
    "postinstall": "node build/builder.cjs",
    "build": "node build/builder.cjs",
    "build:linux": "bun build --minify --compile --outfile dist/newtonium src/index.ts && chmod +x dist/newtonium",
    "build:windows": "bun build --minify --compile --outfile dist/newtonium.exe --target=bun-windows-x64 src/index.ts && chmod +x dist/newtonium.exe"
  },
  "bin": {
    "newtonium": "dist/runner.cjs"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/eden": "^1.1.3",
    "@elysiajs/static": "^1.1.1",
    "@elysiajs/trpc": "^1.1.0",
    "@newtonium/bundler": "^0.2.0",
    "@newtonium/core": "^0.2.1",
    "@types/node": "^22.5.4",
    "ansi-colors": "^4.1.3",
    "axios": "^1.7.7",
    "bun": "^1.1.29",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "elysia": "^1.1.12",
    "ora": "^8.1.0",
    "original-fs": "^1.2.0"
  }
}
